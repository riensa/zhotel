extends ../layout

block layout-content
  div(class="card shadow mb-4")
    div(class="card-body")
        div(class="card-header py-3")
            div 
                div(style="float:left")
                    h3(class="m-0 font-weight-bold text-primary") All Rooms
                div(style="float:right")
                    a(href="/cms/rooms/new" class="btn btn-primary btn-block") Create Room
                div(style="clear:both")
                                        
        div(class="table-responsive")
            table(class="table table-bordered" id="dataTable" width="100%" cellspacing="0")
                thead
                    tr
                        th Room Type 
                        th Quantity
                        th Price 
                        th(style="width:11em") &nbsp;
                tbody
                    each item in data
                        tr 
                            th #{item.type}
                            th #{item.quantity}
                            th #{item.price}
                            th 
                                div(style="float:left")
                                    a(href="/cms/rooms/edit/" + item.id class="btn btn-warning btn-block") EDIT
                                div(style="float:right")
                                    a(href="/cms/rooms/delete/" + item.id class="btn btn-danger btn-block") DELETE
                                div(style="clear:both")
                                
                                

            
